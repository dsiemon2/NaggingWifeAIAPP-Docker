  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= basePath %>';
    const token = '<%= token %>';
    const userName = '<%= user.name || "Honey" %>';

    // DOM Elements
    const chatBody = document.getElementById('chatBody');
    const messageInput = document.getElementById('messageInput');
    const statusBadge = document.getElementById('statusBadge');
    const statusText = document.getElementById('statusText');
    const voiceStatus = document.getElementById('voiceStatus');
    const welcomeMessage = document.getElementById('welcomeMessage');
    const connectBtn = document.getElementById('connectBtn');
    const connectIcon = document.getElementById('connectIcon');
    const disconnectBtn = document.getElementById('disconnectBtn');
    const muteBtn = document.getElementById('muteBtn');
    const muteIcon = document.getElementById('muteIcon');
    const speakerBtn = document.getElementById('speakerBtn');
    const speakerIcon = document.getElementById('speakerIcon');
    const audioVisualizer = document.getElementById('audioVisualizer');

    // State
    let isConnected = false;
    let isConnecting = false;
    let isMuted = false;
    let isSpeakerOff = false;
    let messages = [];
    let ws = null;
    let audioContext = null;
    let mediaStream = null;

    // Update status display
    function updateStatus(status, text, statusClass = '') {
      statusText.textContent = text;
      voiceStatus.textContent = text;
      voiceStatus.className = 'voice-status ' + statusClass;

      if (status === 'connected') {
        statusBadge.className = 'status-badge online';
      } else {
        statusBadge.className = 'status-badge';
      }
    }

    // Toggle voice connection
    async function toggleConnection() {
      if (isConnecting) return;

      if (isConnected) {
        disconnect();
      } else {
        await connect();
      }
    }

    // Connect to voice chat
    async function connect() {
      isConnecting = true;
      connectBtn.classList.add('connecting');
      connectIcon.className = 'bi bi-hourglass-split';
      updateStatus('connecting', 'Connecting...', '');

      try {
        // Request microphone permission
        mediaStream = await navigator.mediaDevices.getUserMedia({ audio: true });

        // Initialize audio context
        audioContext = new (window.AudioContext || window.webkitAudioContext)();

        // Connect to WebSocket (placeholder - connect to actual server)
        // ws = new WebSocket(`wss://your-server/ws?token=${token}`);

        // Simulate connection for demo
        await new Promise(resolve => setTimeout(resolve, 1500));

        isConnected = true;
        isConnecting = false;
        connectBtn.classList.remove('connecting');
        connectBtn.disabled = true;
        disconnectBtn.disabled = false;
        muteBtn.disabled = false;
        speakerBtn.disabled = false;
        updateStatus('connected', 'Connected - Listening...', 'connected');

        // Show speaking animation
        audioVisualizer.classList.add('speaking');

        // Add system message
        addMessage("I'm listening, honey. What do you need?", 'assistant');

      } catch (error) {
        console.error('Connection error:', error);
        isConnecting = false;
        connectBtn.classList.remove('connecting');
        connectBtn.disabled = false;
        connectIcon.className = 'bi bi-telephone-fill';

        if (error.name === 'NotAllowedError') {
          updateStatus('error', 'Microphone access denied. Please allow microphone access.', 'error');
        } else {
          updateStatus('error', 'Connection failed. Please try again.', 'error');
        }
      }
    }

    // Disconnect from voice chat
    function disconnect() {
      isConnected = false;

      // Stop media stream
      if (mediaStream) {
        mediaStream.getTracks().forEach(track => track.stop());
        mediaStream = null;
      }

      // Close WebSocket
      if (ws) {
        ws.close();
        ws = null;
      }

      // Close audio context
      if (audioContext) {
        audioContext.close();
        audioContext = null;
      }

      connectBtn.classList.remove('connecting');
      connectBtn.disabled = false;
      disconnectBtn.disabled = true;
      muteBtn.disabled = true;
      speakerBtn.disabled = true;
      isMuted = false;
      isSpeakerOff = false;
      muteBtn.classList.remove('muted');
      speakerBtn.classList.remove('muted');
      muteIcon.className = 'bi bi-mic-fill';
      speakerIcon.className = 'bi bi-volume-up-fill';
      audioVisualizer.classList.remove('speaking');
      updateStatus('disconnected', 'Disconnected', '');

      addMessage("Talk to you later, honey!", 'assistant');
    }

    // Toggle microphone mute
    function toggleMute() {
      if (!isConnected) return;

      isMuted = !isMuted;

      if (mediaStream) {
        mediaStream.getAudioTracks().forEach(track => {
          track.enabled = !isMuted;
        });
      }

      if (isMuted) {
        muteBtn.classList.add('muted');
        muteIcon.className = 'bi bi-mic-mute-fill';
        updateStatus('connected', 'Microphone muted', 'connected');
      } else {
        muteBtn.classList.remove('muted');
        muteIcon.className = 'bi bi-mic-fill';
        updateStatus('connected', 'Connected - Listening...', 'connected');
      }
    }

    // Toggle speaker
    function toggleSpeaker() {
      if (!isConnected) return;

      isSpeakerOff = !isSpeakerOff;

      if (isSpeakerOff) {
        speakerBtn.classList.add('muted');
        speakerIcon.className = 'bi bi-volume-mute-fill';
      } else {
        speakerBtn.classList.remove('muted');
        speakerIcon.className = 'bi bi-volume-up-fill';
      }
    }

    // Add message to chat
    function addMessage(text, role, animate = true) {
      if (welcomeMessage && welcomeMessage.style.display !== 'none') {
        welcomeMessage.style.display = 'none';
      }

      const messageDiv = document.createElement('div');
      messageDiv.className = 'message ' + role;

      const senderDiv = document.createElement('div');
      senderDiv.className = 'message-sender';
      senderDiv.textContent = role === 'user' ? 'You' : 'Wife AI';

      const bubbleDiv = document.createElement('div');
      bubbleDiv.className = 'message-bubble';
      bubbleDiv.textContent = text;

      messageDiv.appendChild(senderDiv);
      messageDiv.appendChild(bubbleDiv);

      if (!animate) {
        messageDiv.style.animation = 'none';
      }

      chatBody.appendChild(messageDiv);
      chatBody.scrollTop = chatBody.scrollHeight;

      messages.push({ role, content: text });
    }

    // Send text message
    async function sendTextMessage() {
      const text = messageInput.value.trim();
      if (!text) return;

      addMessage(text, 'user');
      messageInput.value = '';

      // Get AI response
      const response = await getAIResponse(text);
      addMessage(response, 'assistant');
    }

    // Quick message
    function sendQuickMessage(text) {
      messageInput.value = text;
      sendTextMessage();
    }

    // Get AI response (placeholder)
    async function getAIResponse(message) {
      const lowerMsg = message.toLowerCase();

      // Simulate delay
      await new Promise(resolve => setTimeout(resolve, 1000));

      if (lowerMsg.includes('date') || lowerMsg.includes('anniversary') || lowerMsg.includes('birthday')) {
        return "Don't forget - your anniversary is coming up on January 15th! You better have something planned, mister. And your mother-in-law's birthday is next month. I've already picked out the perfect gift for her on the wishlist.";
      } else if (lowerMsg.includes('chore') || lowerMsg.includes('task') || lowerMsg.includes('do')) {
        return "Oh, where do I even start? The gutters need cleaning, the garage door still squeaks, and you promised to fix that leaky faucet three weeks ago. Should I go on?";
      } else if (lowerMsg.includes('wishlist') || lowerMsg.includes('gift')) {
        return "I've been eyeing that beautiful necklace from Kay Jewelers. And those new kitchen towels we saw at Bed Bath & Beyond. Oh, and flowers are always nice - just saying!";
      } else if (lowerMsg.includes('reminder')) {
        return "Let me check... You need to pick up the dry cleaning by 5 PM, call your mother back (she left 3 messages!), and don't forget we have dinner with the Johnsons on Saturday.";
      } else if (lowerMsg.includes('hello') || lowerMsg.includes('hi') || lowerMsg.includes('hey')) {
        return "Well, hello there! About time you checked in. What do you need help with today?";
      } else {
        return "Mhmm, I hear you. Is there something specific you need help remembering? Important dates, chores, the wishlist? You know I keep track of everything around here!";
      }
    }

    // Enter key to send
    messageInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        sendTextMessage();
      }
    });

    // Initialize Bootstrap tooltips
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));

    // Initialize status
    updateStatus('disconnected', 'Click Connect to start voice chat', '');
  </script>
