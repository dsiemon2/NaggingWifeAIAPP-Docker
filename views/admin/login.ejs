<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Sign In - Nagging Wife AI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #8e2de2 0%, #e91e63 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
    }
    .auth-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      overflow: hidden;
    }
    .auth-header {
      background: linear-gradient(135deg, #8e2de2 0%, #e91e63 100%);
      color: white;
      padding: 2rem;
      text-align: center;
    }
    .auth-header h1 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }
    .auth-body {
      padding: 2rem;
    }
    .password-toggle {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      z-index: 10;
      color: #6c757d;
    }
    .btn-primary {
      background: linear-gradient(135deg, #8e2de2 0%, #e91e63 100%);
      border: none;
    }
    .btn-primary:hover {
      background: linear-gradient(135deg, #7b27c9 0%, #c91854 100%);
      border: none;
    }
    .sample-logins {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 1rem;
      margin-bottom: 1.5rem;
      border: 1px dashed #dee2e6;
    }
    .sample-login-btn {
      font-size: 0.8rem;
      padding: 0.25rem 0.5rem;
    }
    .divider {
      display: flex;
      align-items: center;
      text-align: center;
      margin: 1.5rem 0;
      color: #6c757d;
    }
    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid #dee2e6;
    }
    .divider span {
      padding: 0 1rem;
    }
    .btn-oauth {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.75rem;
      font-weight: 500;
    }
    .admin-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 20px;
      font-size: 0.75rem;
      margin-top: 0.5rem;
    }
    .back-link {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      position: fixed;
      top: 1rem;
      left: 1rem;
    }
    .back-link:hover {
      color: white;
    }
  </style>
</head>
<body>
  <a href="<%= basePath %>/" class="back-link">
    <i class="bi bi-arrow-left me-1"></i> Back to Home
  </a>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5 col-lg-4">
        <div class="auth-card">
          <div class="auth-header">
            <i class="bi bi-heart-fill fs-1 mb-2 d-block"></i>
            <h1>Nagging Wife AI</h1>
            <p class="mb-0 opacity-75">Happy Wife, Happy Life</p>
            <div class="admin-badge"><i class="bi bi-shield-lock me-1"></i> Admin Panel</div>
          </div>

          <div class="auth-body">
            <!-- Alert for messages -->
            <div id="alertContainer">
              <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <% if (error === 'invalid_token') { %>
                  Invalid or expired session. Please log in again.
                <% } else if (error === 'token_expired') { %>
                  Your session has expired. Please log in again.
                <% } else if (error === 'account_disabled') { %>
                  Your account has been disabled. Contact support.
                <% } else if (error === 'group_disabled') { %>
                  Your group account has been disabled. Contact support.
                <% } else if (error === 'invalid_credentials') { %>
                  Invalid email or password.
                <% } else if (error === 'login_failed') { %>
                  Login failed. Please check your credentials.
                <% } else { %>
                  <%= error %>
                <% } %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
              <% } %>
              <% if (typeof success !== 'undefined' && success) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <% if (success === 'logged_out') { %>
                  You have been logged out successfully.
                <% } else { %>
                  <%= success %>
                <% } %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
              <% } %>
            </div>

            <!-- Sample Logins for Demo -->
            <div class="sample-logins">
              <h6 class="mb-2"><i class="bi bi-key me-1"></i>Demo Logins</h6>
              <div class="d-flex flex-wrap gap-1">
                <button type="button" class="btn btn-outline-primary sample-login-btn"
                        onclick="fillLogin('john@family.local', 'admin123')" data-bs-toggle="tooltip" title="Family Admin">
                  <i class="bi bi-person-fill"></i> John (Admin)
                </button>
                <button type="button" class="btn btn-outline-secondary sample-login-btn"
                        onclick="fillLogin('bob@family.local', 'manager123')" data-bs-toggle="tooltip" title="Manager">
                  <i class="bi bi-person"></i> Bob
                </button>
                <button type="button" class="btn btn-outline-dark sample-login-btn"
                        onclick="fillLogin('superadmin@system.local', 'superadmin123')" data-bs-toggle="tooltip" title="System Administrator">
                  <i class="bi bi-shield-lock"></i> Super Admin
                </button>
              </div>
            </div>

            <form id="loginForm" novalidate>
              <!-- Email or Username -->
              <div class="mb-3">
                <label for="identifier" class="form-label">Email or Username</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-person"></i></span>
                  <input type="text" class="form-control" id="identifier" name="identifier"
                         placeholder="you@example.com or username" required autofocus>
                </div>
              </div>

              <!-- Password -->
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group position-relative">
                  <span class="input-group-text"><i class="bi bi-lock"></i></span>
                  <input type="password" class="form-control" id="password" name="password"
                         placeholder="Enter your password" required>
                  <span class="password-toggle" onclick="togglePassword()">
                    <i class="bi bi-eye" id="passwordToggleIcon"></i>
                  </span>
                </div>
              </div>

              <!-- Remember Me & Forgot Password -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="rememberMe">
                  <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <a href="<%= basePath %>/auth/forgot-password" class="text-decoration-none">Forgot password?</a>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary w-100 py-2" id="submitBtn">
                <span id="submitText">Sign In to Admin</span>
                <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
              </button>
            </form>

            <!-- OAuth Divider -->
            <div class="divider">
              <span>or continue with</span>
            </div>

            <!-- OAuth Buttons -->
            <div class="d-grid gap-2">
              <button type="button" class="btn btn-outline-dark btn-oauth" id="googleBtn" onclick="loginWithGoogle()">
                <svg width="20" height="20" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                <span id="googleBtnText">Continue with Google</span>
              </button>
              <button type="button" class="btn btn-outline-dark btn-oauth" id="microsoftBtn" onclick="loginWithMicrosoft()">
                <svg width="20" height="20" viewBox="0 0 23 23"><path fill="#f35325" d="M1 1h10v10H1z"/><path fill="#81bc06" d="M12 1h10v10H12z"/><path fill="#05a6f0" d="M1 12h10v10H1z"/><path fill="#ffba08" d="M12 12h10v10H12z"/></svg>
                <span id="microsoftBtnText">Continue with Microsoft</span>
              </button>
            </div>

            <!-- Register Link -->
            <div class="text-center mt-4">
              <span class="text-muted">Don't have an account?</span>
              <a href="<%= basePath %>/auth/register" class="text-decoration-none">Create Account</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Base path for API calls
    const basePath = '<%= basePath %>';

    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
    });

    // Fill sample login credentials
    function fillLogin(email, password) {
      document.getElementById('identifier').value = email;
      document.getElementById('password').value = password;
      showAlert('Credentials filled! Click Sign In to continue.', 'info');
    }

    // Toggle password visibility
    function togglePassword() {
      const field = document.getElementById('password');
      const icon = document.getElementById('passwordToggleIcon');
      if (field.type === 'password') {
        field.type = 'text';
        icon.classList.replace('bi-eye', 'bi-eye-slash');
      } else {
        field.type = 'password';
        icon.classList.replace('bi-eye-slash', 'bi-eye');
      }
    }

    // Show alert
    function showAlert(message, type = 'danger') {
      const container = document.getElementById('alertContainer');
      container.innerHTML = `
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
          ${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      `;
    }

    // OAuth configuration
    let oauthConfig = { google: false, microsoft: false };

    // Check OAuth availability
    async function checkOAuthStatus() {
      try {
        const [googleRes, msRes] = await Promise.all([
          fetch(basePath + '/api/oauth/google/status'),
          fetch(basePath + '/api/oauth/microsoft/status'),
        ]);
        const [googleData, msData] = await Promise.all([googleRes.json(), msRes.json()]);

        oauthConfig.google = googleData.data?.enabled || false;
        oauthConfig.microsoft = msData.data?.enabled || false;

        // Update button states
        if (!oauthConfig.google) {
          document.getElementById('googleBtn').disabled = true;
          document.getElementById('googleBtnText').textContent = 'Google (Not configured)';
        }
        if (!oauthConfig.microsoft) {
          document.getElementById('microsoftBtn').disabled = true;
          document.getElementById('microsoftBtnText').textContent = 'Microsoft (Not configured)';
        }
      } catch (err) {
        console.error('Failed to check OAuth status:', err);
      }
    }

    checkOAuthStatus();

    // OAuth login functions - require company domain first
    function promptCompanyDomain(provider) {
      const domain = prompt('Enter your company domain to continue with ' + provider + ':');
      if (domain && domain.trim()) {
        return domain.trim();
      }
      return null;
    }

    function loginWithGoogle() {
      if (!oauthConfig.google) {
        showAlert('Google sign-in is not configured');
        return;
      }
      const domain = promptCompanyDomain('Google');
      if (domain) {
        window.location.href = basePath + `/api/oauth/google?companyDomain=${encodeURIComponent(domain)}`;
      }
    }

    function loginWithMicrosoft() {
      if (!oauthConfig.microsoft) {
        showAlert('Microsoft sign-in is not configured');
        return;
      }
      const domain = promptCompanyDomain('Microsoft');
      if (domain) {
        window.location.href = basePath + `/api/oauth/microsoft?companyDomain=${encodeURIComponent(domain)}`;
      }
    }

    // Form submission
    document.getElementById('loginForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const form = e.target;
      const submitBtn = document.getElementById('submitBtn');
      const submitText = document.getElementById('submitText');
      const submitSpinner = document.getElementById('submitSpinner');

      // Validate form
      if (!form.checkValidity()) {
        form.classList.add('was-validated');
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      submitText.textContent = 'Signing in...';
      submitSpinner.classList.remove('d-none');

      try {
        const res = await fetch(basePath + '/api/auth/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            identifier: document.getElementById('identifier').value,
            password: document.getElementById('password').value,
          }),
        });

        const data = await res.json();

        if (data.success) {
          // Store token
          localStorage.setItem('authToken', data.data.token);
          localStorage.setItem('user', JSON.stringify(data.data.user));
          localStorage.setItem('company', JSON.stringify(data.data.company));

          // Check if email is verified
          if (!data.data.user.emailVerified) {
            showAlert('Please verify your email address before accessing all features.', 'warning');
          }

          // Redirect to admin dashboard
          window.location.href = basePath + `/admin/dashboard?token=${data.data.token}`;
        } else {
          showAlert(data.error || 'Invalid credentials');
        }
      } catch (err) {
        showAlert('An error occurred. Please try again.');
      } finally {
        submitBtn.disabled = false;
        submitText.textContent = 'Sign In to Admin';
        submitSpinner.classList.add('d-none');
      }
    });
  </script>
</body>
</html>
