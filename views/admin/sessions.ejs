<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sessions - Nagging Wife AI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; max-height: 100vh; overflow-y: auto; background: #1e3a5f; position: sticky; top: 0; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; align-items: center; gap: 0.5rem; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; width: 18px; height: 18px; }
    tr.selected { background-color: #cfe2ff !important; }
    tr.selected td { background-color: #cfe2ff !important; }
    tbody tr:hover { background-color: #f8f9fa; }
    tbody tr.selected:hover { background-color: #b6d4fe !important; }
    .score-badge { font-size: 0.875rem; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; border-radius: 50%; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'analytics' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-chat-dots text-primary me-2"></i>Sessions</h2>
          <div>
            <select class="form-select" id="statusFilter" onchange="filterByStatus(this.value)">
              <option value="all" <%= statusFilter === 'all' ? 'selected' : '' %>>All Sessions</option>
              <option value="completed" <%= statusFilter === 'completed' ? 'selected' : '' %>>Completed</option>
              <option value="scheduled" <%= statusFilter === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
              <option value="in_progress" <%= statusFilter === 'in_progress' ? 'selected' : '' %>>In Progress</option>
            </select>
          </div>
        </div>

        <!-- Bulk Actions -->
        <div class="bulk-actions mb-3" id="bulkActions">
          <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
          <button class="btn btn-sm btn-outline-danger" onclick="deleteSelected()" data-bs-toggle="tooltip" title="Delete selected sessions">
            <i class="bi bi-trash"></i> Delete Selected
          </button>
        </div>

        <div class="card">
          <div class="card-body p-0">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Name</th>
                  <th>Topic</th>
                  <th>Status</th>
                  <th class="text-center">Score</th>
                  <th>Date</th>
                  <th>Notes</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="tableBody">
                <% if (sessions && sessions.length > 0) { %>
                  <% sessions.forEach(session => { %>
                  <tr>
                    <td><input type="checkbox" class="form-check-input row-checkbox" data-id="<%= session.id %>"></td>
                    <td>
                      <strong><%= session.name %></strong>
                      <br><small class="text-muted"><%= session.email %></small>
                    </td>
                    <td><%= session.topic %></td>
                    <td>
                      <span class="badge bg-<%= session.status === 'completed' ? 'success' : session.status === 'scheduled' ? 'warning text-dark' : session.status === 'in_progress' ? 'primary' : 'secondary' %>">
                        <%= session.status.charAt(0).toUpperCase() + session.status.slice(1).replace('_', ' ') %>
                      </span>
                    </td>
                    <td class="text-center">
                      <% if (session.score) { %>
                      <span class="score-badge bg-<%= session.score >= 8 ? 'success' : session.score >= 6 ? 'warning' : 'danger' %> text-white">
                        <%= session.score %>
                      </span>
                      <% } else { %>
                      <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td><%= new Date(session.scheduledAt).toLocaleDateString() %></td>
                    <td><%= session.notes ? session.notes.substring(0, 30) + (session.notes.length > 30 ? '...' : '') : '-' %></td>
                    <td>
                      <a href="/admin/sessions/<%= session.id %>?token=<%= token %>" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="View session details">
                        <i class="bi bi-eye"></i>
                      </a>
                      <button class="btn btn-sm btn-outline-danger" onclick="deleteSession('<%= session.id %>')" data-bs-toggle="tooltip" title="Delete session">
                        <i class="bi bi-trash"></i>
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                <% } else { %>
                <tr>
                  <td colspan="8" class="text-center py-5">
                    <i class="bi bi-chat-dots text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">No Sessions Yet</h5>
                    <p class="text-muted">Sessions will appear here after check-ins are completed.</p>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= sessions?.length || 0 %></span> of <span id="totalRows"><%= sessions?.length || 0 %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
            </select>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <%- include('_table-controls') %>
  <script>
    const token = '<%= token %>';
    let tableControls;

    document.addEventListener('DOMContentLoaded', () => {
      tableControls = new TableControls();
    });

    function filterByStatus(status) {
      const url = status === 'all'
        ? `/admin/sessions?token=${token}`
        : `/admin/sessions?status=${status}&token=${token}`;
      window.location.href = url;
    }

    function getSelectedIds() {
      return tableControls ? tableControls.getSelectedIds() : [];
    }

    async function deleteSelected() {
      const ids = getSelectedIds();
      if (ids.length === 0) return;
      if (!confirm(`Delete ${ids.length} session(s)?`)) return;

      try {
        const res = await fetch(`/admin/sessions/bulk-delete?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ ids })
        });
        if (res.ok) location.reload();
      } catch (err) {
        alert('Error: ' + err.message);
      }
    }

    async function deleteSession(id) {
      if (!confirm('Delete this session?')) return;
      try {
        const res = await fetch(`/admin/sessions/${id}?token=${token}`, { method: 'DELETE' });
        if (res.ok) location.reload();
      } catch (err) {
        alert('Error: ' + err.message);
      }
    }
  </script>
</body>
</html>
